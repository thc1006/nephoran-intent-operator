{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "allow": [
      "Bash(go *)",
      "Bash(golangci-lint*)",
      "Bash(act *)"
    ],
    "ask": [
      "Bash(git push:*)"
    ],
    "deny": []
  },

  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",     // 5 分鐘
    "BASH_MAX_TIMEOUT_MS": "1800000",       // 30 分鐘上限
    "MCP_TOOL_TIMEOUT": "1800000",          // MCP 工具逾時（毫秒）
    "BASH_MAX_OUTPUT_LENGTH": "1000000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192"
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python $CLAUDE_PROJECT_DIR/.claude/hooks/pre_bash_guard.py",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python $CLAUDE_PROJECT_DIR/.claude/hooks/post_write_validate.py",
            "timeout": 120
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python $CLAUDE_PROJECT_DIR/.claude/hooks/notify.py",
            "timeout": 10
          }
        ]
      }
    ]
  },

  "enabledMcpjsonServers": ["github", "filesystem", "kubernetes"],
  "enableAllProjectMcpServers": true
}
