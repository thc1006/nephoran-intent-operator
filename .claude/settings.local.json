{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git add:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "name": "guard-dangerous-bash",
        "matchers": [
          {
            "tool": "Bash"
          }
        ],
        "command": "python .claude/hooks/pre_bash_guard.py",
        "timeoutMs": 20000
      }
    ],
    "PostToolUse": [
      {
        "name": "validate-on-write",
        "matchers": [
          {
            "tool": "Write"
          },
          {
            "tool": "Edit"
          },
          {
            "tool": "MultiEdit"
          }
        ],
        "command": "python .claude/hooks/post_write_validate.py",
        "timeoutMs": 45000
      }
    ],
    "Notification": [
      {
        "name": "notify",
        "matchers": [
          {
            "tool": "*"
          }
        ],
        "command": "python .claude/hooks/notify.py",
        "timeoutMs": 5000
      }
    ]
  },
  "enabledMcpjsonServers": [
    "github",
    "filesystem",
    "kubernetes"
  ],
  "enableAllProjectMcpServers": true
}