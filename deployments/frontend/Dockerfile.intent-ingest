# Multi-stage build for intent-ingest service
FROM golang:1.24-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags="-w -s" \
    -o /bin/intent-ingest \
    ./cmd/intent-ingest

# Final stage
FROM alpine:3.19

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata

# Create non-root user
RUN addgroup -g 1000 nephoran && \
    adduser -D -u 1000 -G nephoran nephoran

# Create necessary directories
RUN mkdir -p /var/nephoran/handoff /app/docs/contracts && \
    chown -R nephoran:nephoran /var/nephoran /app

# Copy binary from builder
COPY --from=builder /bin/intent-ingest /usr/local/bin/intent-ingest

# Copy schema file (if exists)
COPY --chown=nephoran:nephoran docs/contracts/intent.schema.json /app/docs/contracts/ 2>/dev/null || true

# Switch to non-root user
USER nephoran

# Set working directory
WORKDIR /app

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD wget -q --spider http://localhost:8080/healthz || exit 1

# Run the application
ENTRYPOINT ["/usr/local/bin/intent-ingest"]
CMD ["--addr", ":8080", "--mode", "llm", "--handoff", "/var/nephoran/handoff"]
