                    <span class="status-item-value">LLM</span>
                </div>
            </div>
            <div class="status-info">
                <div class="status-item">
                    <span class="status-item-value" id="timestamp">--:--:--</span>
                </div>
            </div>
        </footer>
    </div>

    <script>
        // ==================== CONFIGURATION ====================
        const CONFIG = {
            apiEndpoint: window.location.hostname === 'localhost'
                ? 'http://localhost:8080'
                : 'http://intent-ingest-service:8080',
            historyKey: 'nephoran_intent_history',
            maxHistoryItems: 50
        };

        // ==================== STATE MANAGEMENT ====================
        const state = {
            history: loadHistory(),
            currentRequest: null
        };

        // ==================== DOM ELEMENTS ====================
        const elements = {
            intentInput: document.getElementById('intentInput'),
            intentType: document.getElementById('intentType'),
            namespace: document.getElementById('namespace'),
            submitBtn: document.getElementById('submitBtn'),
            clearBtn: document.getElementById('clearBtn'),
            responseCard: document.getElementById('responseCard'),
            responseStatus: document.getElementById('responseStatus'),
            jsonResponse: document.getElementById('jsonResponse'),
            historyList: document.getElementById('historyList'),
            timestamp: document.getElementById('timestamp'),
            apiEndpoint: document.getElementById('apiEndpoint')
        };

        // ==================== INITIALIZATION ====================
        function init() {
            setupEventListeners();
            renderHistory();
            updateTimestamp();
            updateAPIEndpoint();
            setInterval(updateTimestamp, 1000);
        }

        // ==================== EVENT LISTENERS ====================
        function setupEventListeners() {
            elements.submitBtn.addEventListener('click', handleSubmit);
            elements.clearBtn.addEventListener('click', handleClear);

            // Example click handlers
            document.querySelectorAll('.example-item').forEach(item => {
                item.addEventListener('click', () => {
                    elements.intentInput.value = item.dataset.example;
                    elements.intentInput.focus();
                });
            });

            // Quick action handlers
            document.querySelectorAll('.quick-action[data-type]').forEach(action => {
                action.addEventListener('click', () => {
                    elements.intentType.value = action.dataset.type;
                });
            });

            // Keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === 'Enter') {
                    handleSubmit();
                }
                if (e.ctrlKey && e.key === 'l') {
                    e.preventDefault();
                    handleClear();
                }
            });
        }

        // ==================== CORE FUNCTIONS ====================
        async function handleSubmit() {
            const intentText = elements.intentInput.value.trim();

            if (!intentText) {
                showError('Please enter an intent command');
                return;
            }

            setLoading(true);
            hideResponse();

            try {
                const response = await fetch(`${CONFIG.apiEndpoint}/intent`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'text/plain'
                    },
                    body: intentText
                });

                const responseText = await response.text();

                if (response.ok) {
                    handleSuccess(responseText, intentText);
                } else {
                    handleError(responseText);
                }
            } catch (error) {
                handleError(`Network error: ${error.message}. Make sure the intent-ingest service is running.`);
            } finally {
                setLoading(false);
            }
        }

        function handleSuccess(responseText, intentText) {
            let jsonData;
            try {
                jsonData = JSON.parse(responseText);
            } catch {
                jsonData = { message: responseText };
            }

            showResponse('success', 'Success', jsonData);
            addToHistory({
                timestamp: new Date().toISOString(),
                intent: intentText,
                type: elements.intentType.value,
                namespace: elements.namespace.value,
                response: jsonData
            });
        }

        function handleError(errorMessage) {
            showResponse('error', 'Error', { error: errorMessage });
        }

        function handleClear() {
            elements.intentInput.value = '';
            elements.namespace.value = 'default';
            hideResponse();
            elements.intentInput.focus();
        }

        // ==================== UI UPDATES ====================
        function setLoading(isLoading) {
            elements.submitBtn.disabled = isLoading;
            if (isLoading) {
                elements.submitBtn.classList.add('btn-loading');
            } else {
                elements.submitBtn.classList.remove('btn-loading');
            }
        }

        function showResponse(status, statusText, data) {
            elements.responseCard.classList.add('active');
            elements.responseStatus.textContent = statusText;
            elements.responseStatus.className = `response-status ${status}`;
            elements.jsonResponse.textContent = JSON.stringify(data, null, 2);
        }

        function hideResponse() {
            elements.responseCard.classList.remove('active');
        }

        function showError(message) {
            showResponse('error', 'Error', { error: message });
        }

        // ==================== HISTORY MANAGEMENT ====================
        function loadHistory() {
            try {
                const stored = localStorage.getItem(CONFIG.historyKey);
                return stored ? JSON.parse(stored) : [];
            } catch {
                return [];
            }
        }

        function saveHistory() {
            try {
                localStorage.setItem(CONFIG.historyKey, JSON.stringify(state.history));
            } catch (error) {
                console.error('Failed to save history:', error);
            }
        }

        function addToHistory(item) {
            state.history.unshift(item);
            if (state.history.length > CONFIG.maxHistoryItems) {
                state.history = state.history.slice(0, CONFIG.maxHistoryItems);
            }
            saveHistory();
            renderHistory();
        }

        function renderHistory() {
            elements.historyList.innerHTML = '';

            if (state.history.length === 0) {
                elements.historyList.innerHTML = '<div style="padding: 1rem; text-align: center; color: var(--text-muted); font-size: 12px;">No history yet</div>';
                return;
            }

            state.history.forEach((item, index) => {
                const historyItem = createHistoryItem(item, index);
                elements.historyList.appendChild(historyItem);
            });
        }

        function createHistoryItem(item, index) {
            const div = document.createElement('div');
            div.className = 'history-item';
            div.style.animationDelay = `${index * 0.05}s`;

            const timestamp = new Date(item.timestamp).toLocaleString('en-US', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                month: 'short',
                day: 'numeric'
            });

            div.innerHTML = `
                <div class="history-timestamp">${timestamp}</div>
                <div class="history-intent">${escapeHtml(item.intent)}</div>
                <span class="history-type">${item.type}</span>
            `;

            div.addEventListener('click', () => {
                elements.intentInput.value = item.intent;
                elements.intentType.value = item.type;
                elements.namespace.value = item.namespace;
                showResponse('success', 'Success', item.response);
            });

            return div;
        }

        // ==================== UTILITY FUNCTIONS ====================
        function updateTimestamp() {
            const now = new Date();
            elements.timestamp.textContent = now.toLocaleTimeString('en-US', {
                hour12: false,
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
        }

        function updateAPIEndpoint() {
            elements.apiEndpoint.textContent = CONFIG.apiEndpoint;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // ==================== START APPLICATION ====================
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
