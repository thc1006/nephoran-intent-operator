# Build Configuration for Nephoran Intent Operator CI
# This file defines build optimization settings for CI environments

# Go build optimization flags
GO_BUILD_FLAGS="-trimpath -ldflags='-s -w'"
GO_TEST_FLAGS="-timeout=10m -count=1"

# Module proxy configuration for private repos
GOPRIVATE=github.com/thc1006/*
GONOPROXY=github.com/thc1006/*
GONOSUMDB=github.com/thc1006/*

# CI environment optimization
GOMAXPROCS=4
GOCACHE=/tmp/go-build-cache
GOMODCACHE=/tmp/go-mod-cache

# Package build order (priority packages first)
PRIORITY_PACKAGES="\
  ./api/... \
  ./controllers \
  ./cmd/main.go \
  ./cmd/conductor \
  ./cmd/llm-processor \
  ./cmd/porch-publisher \
"

# Packages to exclude from CI builds (broken/incomplete)
EXCLUDE_PACKAGES="\
  ./tests/framework \
  ./tests/chaos \
  ./tests/integration \
  ./tests/performance/validation \
  ./tests/o2/mocks \
  ./pkg/oran/o2 \
  ./pkg/monitoring/availability \
  ./pkg/nephio/krm/functions \
  ./pkg/controllers/orchestration \
  ./pkg/ml \
  ./scripts \
  ./pkg/disaster \
"